-- ===============================
‏-- Loader: Key-based auto-run
-- ===============================

‏local KEY_API = "https://cloudy-dove-90.lorln9.deno.net/" -- رابط المفتاح
‏local SCRIPT_URL = "" -- السكربت الأساسي

-- ضع المفتاح هنا أو اجعله يأخذه من مكان آمن
‏local USER_KEY = getgenv().LORLN_KEY or "PUT_KEY_HERE"

-- وظيفة للتحقق من المفتاح
‏local function verifyKey(userKey)
‏    local success, serverKey = pcall(function()
‏        return game:HttpGet(KEY_API)
‏    end)
‏    if not success then return false end
‏    return userKey:gsub("%s+","") == serverKey:gsub("%s+","")
‏end

-- إذا المفتاح صحيح، شغل السكربت الأساسي مباشرة
‏if verifyKey(USER_KEY) then
‏    print("✅ Key accepted, running main script...")

‏    local success, scriptContent = pcall(function()
‏        return game:HttpGet(SCRIPT_URL)
‏    end)

‏    if success and scriptContent then
        -- تشغيل السكربت الأساسي مخفي
‏        loadstring(scriptContent)()
‏    else
‏        warn("❌ Failed to load main script")
‏    end
‏else
‏    warn("❌ Invalid key")
‏end
